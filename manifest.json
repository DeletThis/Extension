{
    "name": "Freshify",
    "version": "1.0",
    "description": "Enhancing your browser experience since 2k18",
    "permissions": ["activeTab", "declarativeContent", "storage", "https://*.cloudfunctions.net/"],
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/logo16.png",
        "32": "images/logo32.png",
        "48": "images/logo48.png",
        "128": "images/logo128.png"
      }
    },
    "icons": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "options_page": "options.html",
    "manifest_version": 2
  }